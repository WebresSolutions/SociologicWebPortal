@page
@model LoginModel

@{
	ViewData["Title"] = "Casimo Log in";
}

<div class="container-card">
	<div class="">
		<div class="d-flex justify-content-center mb-3">
			<img src="~/casimo_logo.png" alt="Casimo Logo" width="100px" />
		</div>
		<section id="standardLoginSection">
			<form id="account" method="post" asp-page-handler="Email">
				<h2>Log in to Casimo</h2>
				<hr />

				@if (!string.IsNullOrEmpty(Model.SuccessMessage))
				{
					<div class="text-success" role="alert">@Model.SuccessMessage</div>
				}
				<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
				<div class="form-floating mb-3">
					<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
					<label asp-for="Input.Email" class="form-label">Email</label>
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				@if (!Model.HideLoginButtons)
				{
					<div class="checkbox mb-3">
						<label asp-for="Input.RememberMe" class="form-label">
							<input class="form-check-input" asp-for="Input.RememberMe" />
							@Html.DisplayNameFor(m => m.Input.RememberMe)
						</label>
					</div>
					<div>
						<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
					</div>

					<div class="mt-3">
						<p>
							<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
						</p>
						<p>
							<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
						</p>

					</div>
				}
			</form>
		</section>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script>

	</script>
}

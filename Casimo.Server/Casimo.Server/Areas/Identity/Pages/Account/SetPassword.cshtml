@page
@model Casimo.Server.Areas.Identity.Pages.Account.CreatePassword
@{
    ViewData["Title"] = "Create Password";
}

<div class="container-card">
    <div class="d-flex justify-content-center mb-3">
        <img src="~/casimo_logo.png" alt="Sample Image" width="100px" />
    </div>
    <hr />
    <p class="text-muted text-center mb-4">
        Welcome to Casimo! Please set your password to complete your account setup.
    </p>
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success" role="alert">
            @Model.StatusMessage
        </div>
    }

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <div class="form-floating mb-3">
                <input type="email" class="form-control" value="@Model.Email" readonly />
                <label class="form-label">Email</label>
            </div>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
            <label asp-for="Input.Password" class="form-label">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="form-text">
                <small class="text-muted">
                    Password must be at least 8 characters and contain uppercase, lowercase, number, and special character.
                </small>
            </div>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
            <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Set Password</button>
            <a href="/Identity/Account/Login" class="btn btn-outline-secondary">Back to Login</a>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
